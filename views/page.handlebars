<div class="head" name="title">
    <div class="head-overlay">
        <div class="head-text">   {{{title}}} </div>
    </div>
</div>

<div class="body"> 
    <div class="conteiner" name = "text">
        {{{text}}}
    </div>
    <hr class="hr">
    <span name="id" style="opacity: 0;">{{{id}}}</span>
    <div class="conteiner">
        <form>
            <div>
                <label for="title">Title:</label>
                <input style="width: 100%" name = "title" value="{{{title}}}"/>
            </div>
            <div>
                <label for="text">Content:</label>
                <textarea style="width: 100%; min-height: 5em;" name="text">{{{text}}}</textarea>
            </div>
            <div class="button-form">
                <button onclick="myFunctionSave()">Save</button>
                <button onclick="myFunctionAdd()">Add</button>
                <button onclick="myFunctionReset()">Reset</button>
                <button onclick="myFunctionDelete()"><a href="/">Delete</a></button>
            </div>
        </form>
    </div>
    <div class="lesf-bar">
        <ol>
            <li><a href="/">Main menu</a></li>
            {{{link}}}
