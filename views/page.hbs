<div class="head" name="title">
        {{{title}}}
</div>

<div class="body"> 
    <div class="conteiner" name = "text">
        {{{text}}}
    </div>
    <hr class="hr">
    <span name="id" style="opacity: 0;">{{{id}}}</span>
    <div class="conteiner">
        <form>
            <div>
                <label for="title">Title:</label>
                <input style="width: 100%" name = "title" value="{{{title}}}"/>
            </div>
            <div>
                <label for="text">Content:</label>
                <textarea style="width: 100%; min-height: 5em;" name="text">{{{text}}}</textarea>
            </div>
            <div>
                <button onclick="myFunctionSave()">Save</button>
                <button type="submit" onclick="myFunctionAdd()">Add</button>
                <button type="submit" onclick="myFunctionReset()">Reset</button>
                <button type="submit" onclick="myFunctionDelete()"><a href="/blog" style="text-decoration: none;color:black">Delete</a></button>
            </div>
        </form>
    </div>
    <div class="lesf-bar">
        <ol>
            <li><a href="http://localhost:3333/blog">Main menu</a></li>
            <li><a href="http://localhost:3333/blog/0">Page 1</a></li>
            <li><a href="http://localhost:3333/blog/1">Page 2</a></li>
            <li><a href="http://localhost:3333/blog/2">Page 3</a></li>
            <li><a href="" onclick="myFunctionSave()">Save</a></li>
        </ol>
    </div>
</div>
<footer class="footer">
    <h3>Footer description:</h3>
    <P>This blog created for test end learn js</P>
</footer>
<script>
            
            

// Добавление блога
function CreatePage(title, text, id) {
    let url ='http://localhost:3333/blog/';
    fetch(url+id, {
        contentType: "application/json",
        method: "POST",
        body: JSON.stringify({
            title: title,
            text: text
        }),
        headers: {
            'Content-Type': 'application/json'
        }
    }).then(response => {
    console.log(response);
    });
}
// Изменение блога
function EditPage(title, text, id) {
    let url ='http://localhost:3333/blog/';
    fetch(url+id, {
        contentType: "application/json",
        method: "PUT",
        body: JSON.stringify({
            title: title,
            text: text
        }),
        headers: {
            'Content-Type': 'application/json'
        }
    }).then(response => {
    console.log(response);
    });
}

// del page
function DeletePage(id) {
    let url ='http://localhost:3333/blog/';
    fetch(url+id, {
        method: 'DELETE',
    }).then(response => {
    console.log(response);
    });
 }

function myFunctionSave() {
	var titleInput = document.getElementsByName("title");
	var textTexterea = document.getElementsByName("text");
    var idSpan = document.getElementsByName("id");
	var titles = titleInput[1].value;
	var texts = textTexterea[1].value;
    var ids = idSpan[0].innerText;
    EditPage(titles, texts, ids);
}
function myFunctionAdd() {
	var titleInput = document.getElementsByName("title");
	var textTexterea = document.getElementsByName("text");
    var idSpan = document.getElementsByName("id");
	var titles = titleInput[1].value;
	var texts = textTexterea[1].value;
    var ids = idSpan[0].innerText;
    CreatePage(titles, texts, ids);
}
function myFunctionReset() {
    let form = document.forms;
    form.reset();
}
